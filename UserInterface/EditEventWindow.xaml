<Window x:Class="UserInterface.EditEventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserInterface"
        mc:Ignorable="d"
        Title="Edit event" Height="800" Width="900"
        Background="#FF31323A"
        ResizeMode = "Noresize">
    <Window.Resources>
        <Style TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height = "50"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="70*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="93*"/>
        </Grid.ColumnDefinitions>

        <Grid Background= "#FF24272C" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal">
                <TextBlock Grid.Column="1"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="White"
                       FontSize="25" 
                       Text="{Binding Name}"
                       FontWeight="Bold" Margin="15"/>

                <StackPanel Margin="5" Orientation="Horizontal" >
                    <TextBlock Text="Start date: " 
                           Foreground="White"
                           HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                           FontSize="15"
                           Margin="40,5,5,5"
                           />
                    <TextBlock Text="{Binding StartDate}"
                           HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                           Foreground="White"
                           FontSize="13"
                           Margin="5"/>

                    <TextBlock Text="End date: " 
                           Foreground="White"
                           HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                           FontSize="15"
                           Margin="5"
                           />
                    <TextBlock Text="{Binding EndDate}"
                           Foreground="White"
                           HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                           FontSize="13"
                           Margin="5"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80*"/>
                <ColumnDefinition Width="20*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
                <TextBlock Text="Participants"
                           Foreground="White"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           FontSize="20"
                           Margin="10"/>
                <ListView Name="ParticipantsList" 
                        ItemsSource="{Binding Participants}"
                    Background="#FF31323A"
                    MaxHeight="300">

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="First Name"
                                    Width="200">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding FirstName}"
                                                   Foreground="White"
                                                HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Last Name"
                                    Width="200">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding LastName}"
                                                   Foreground="White"
                                                HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Birth date"
                                Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding BirthDate}"
                                                   Foreground="White"
                                                HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Width="50">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Delete"
                                                Command="{Binding DataContext.DeleteParticipantCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                        </GridView>
                    </ListView.View>
                </ListView>
                <StackPanel Margin="10"
                        Orientation="Horizontal">
                    <ComboBox Width="500"
                            Height="20"
                            ItemsSource="{Binding UsersPeople}"
                            SelectedValue="{Binding SelectedParticipant}"/>

                    <Button Width="100"
                Height="20"
                Background="#70877F"
                Margin="10"
                Command="{Binding AddParticipantCommand}">
                        <TextBlock Text="Add"
                        Foreground="White"
                        FontWeight="Bold"/>
                    </Button>

                </StackPanel>


            </StackPanel>

            <Border Grid.Column="1" Margin="10,20,10,20">

            </Border>
        </Grid>

        <Grid Grid.Row="2">
            <StackPanel Margin="10">
                <TextBlock Text="Transactions"
                           Foreground="White"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           FontSize="20"
                           Margin="10"/>
                <ListView Name="TransactionList" ItemsSource="{Binding Transactions}" 
                          Background="#FF31323A"
                          Height="300">

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Document name"
                                            Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding DocumentName, UpdateSourceTrigger=PropertyChanged}"
                                                    BorderThickness="0"
                                                    Background="#FF53545D"
                                                    Foreground="White"
                                                    HorizontalAlignment="Stretch"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Transaction purpose"
                                            Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                                    BorderThickness="0"
                                                    Background="#FF53545D"
                                                    Foreground="White"
                                                    HorizontalAlignment="Stretch"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Type"
                                        Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox ItemsSource="{Binding DataContext.TransactionTypes, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListView}}}"
                                               SelectedItem="{Binding Type, Mode=TwoWay}"
                                                 HorizontalAlignment="Stretch"
                                              Width="130"
                                              Height="20"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Date"
                                            Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <DatePicker SelectedDate="{Binding Date}"
                                                    HorizontalAlignment="Stretch"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Amount"
                                            Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}"
                                                    BorderThickness="0"
                                                    Background="#FF53545D"
                                                    Foreground="White"
                                                    HorizontalAlignment="Stretch"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Save"
                                         Command="{Binding SaveRowCommand}" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>


                            <GridViewColumn Width="50">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Delete"
                                                Command="{Binding DataContext.DeleteTransactionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Width="20">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="*"
                                                   Foreground="Red"
                                                   FontSize="18"
                                                   Visibility="{Binding IsChanged, Converter={StaticResource BoolToVis}}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
                <Button Width="100"
                    Height="20"
                    Background="#70877F"
                    Margin="10"
                    Command="{Binding AddTransactionCommand}">
                    <TextBlock Text="Add"
                    Foreground="White"
                    FontWeight="Bold"/>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
